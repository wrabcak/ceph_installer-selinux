
## <summary>policy for gunicorn</summary>

########################################
## <summary>
##	Execute TEMPLATE in the gunicorn domin.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`gunicorn_domtrans',`
	gen_require(`
		type gunicorn_t, gunicorn_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, gunicorn_exec_t, gunicorn_t)
')

########################################
## <summary>
##	Search gunicorn lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`gunicorn_search_lib',`
	gen_require(`
		type gunicorn_var_lib_t;
	')

	allow $1 gunicorn_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

